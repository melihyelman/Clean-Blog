<%- include("partials/_header") -%>

  <body>

    <!-- Navigation -->

    <%- include("partials/_nav") -%>

      <!-- Page Header -->
      <header class="masthead" style="background-image: url('img/post-bg.jpg')">
        <div class="overlay"></div>
        <div class="container">
          <div class="row">
            <div class="col-lg-8 col-md-10 mx-auto">
              <div class="post-heading">
                <h1>
                  <%= post.title %>
                </h1>
                <span class="meta">Posted by
                  <a style="color: #ddd; font-weight: 700;" href="https://www.linkedin.com/in/melihyelman/">Melih
                    Yelman</a>
                  on <%= moment(post.dateCreated).format('lll') %></span>
              </div>
            </div>
          </div>
        </div>
      </header>

      <!-- Post Content -->
      <article>
        <div class="container">
          <div class="row d-block">
            <div class="col-lg-8 col-md-10 offset-lg-2 offset-md-1 mx-auto">
              <p>
                <%= post.detail %>
              </p>
            </div>
            <div class="row ">
              <div class="mx-auto ">
                <!-- Share box -->
                <div class="tm-bg-gray tm-share-box d-flex">
                  <div class="text-center">
                    <a href="/post/edit/<%= post._id %>" class="btn btn-primary p-2 mr-4"><span>Update
                        Post</span></a>
                  </div>
                  <div class="text-center">
                    <a href="/post/delete/<%= post._id %>?_method=DELETE" class="btn btn-danger p-2"
                      onclick="return confirm('ARE YOU SURE?')"><span>Delete
                        Post</span></a>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </article>

      <hr>

      <!-- Footer -->

      <%- include("partials/_footer") -%>

  </body>

  </html>